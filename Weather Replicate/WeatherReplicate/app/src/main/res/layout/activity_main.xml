<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cloudy_city"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tempTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="34Â° C"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="72sp" />

        <TextView
            android:id="@+id/weatherTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cloudy"
            android:textAlignment="center"
            android:textColor="#FFFFFFFF"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:background="#E9C8C4C4"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cloudyImg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/cloud" />

            <TextView
                android:id="@+id/cloudyTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cloudy"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/overcastImg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/cloudy" />

            <TextView
                android:id="@+id/overcastTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overcast" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/thunderImg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/storm" />

            <TextView
                android:id="@+id/thunderTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thunder" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sunnyImg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/sun" />

            <TextView
                android:id="@+id/sunnyTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunny" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>